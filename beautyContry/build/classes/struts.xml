<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>   
    <package name="default" extends="struts-default">        
        <action name="loginAction" class="com.action.UserAction" method="login">
        	<result name="loginError">/login.jsp</result>
        	<result name="loginSuccess">/index.jsp</result>
        </action>
        
        <action name="showAllProAction" class="com.action.ProductAction" method="showAllProduct">
        	<result name="showAllProduct">/product.jsp</result>
        </action>
        
        <action name="showProByIDAction" class="com.action.ProductAction" method="showProductByID">
        	<result name="showProductByID">/item.jsp</result>
        </action>
        
        <action name="showCartByUserNameAction" class="com.action.CartAction" method="showCartByUserName">
        	<result name="showCartSuccess">/cart_view.jsp</result>
        	<result name="login">/login.jsp</result>
        </action>
    </package>  

</struts>
